<div class="create-course-container">
  <%= render 'devise/shared/error_messages', resource: @course %>

  <div class="course-form">
    <%= form_with(model: @course, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :duration, class: "form-label" %>
        <%= form.text_field :duration, class: "form-control" %>
      </div>
      
      <div class="form-group span-col">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-control", rows: 3 %>
      </div>
      
      <div class="form-group span-col">
        <%= form.label :course_content, class: "form-label" %>
        <%= form.text_area :course_content, class: "form-control", rows: 3 %>
      </div>
      
      <div class="form-group span-col">
        <%= form.label :instructor_bio, class: "form-label" %>
        <%= form.text_area :instructor_bio, class: "form-control", rows: 3 %>
      </div>

      <div class="form-group">
        <%= form.label :category, class: "form-label" %>
        <%= form.text_field :category, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :level, class: "form-label" %>
        <%= form.text_field :level, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :start_date, class: "form-label" %>
        <%= form.date_field :start_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :end_date, class: "form-label" %>
        <%= form.date_field :end_date, class: "form-control" %>
      </div>

      <div class="form-group span-col">
        <%= form.label :prerequisites, class: "form-label" %>
        <%= form.text_area :prerequisites, class: "form-control", rows: 3 %>
      </div>

      <div class="form-group">
        <%= form.label :image, "Thumbnail", class: "form-label" %>
        <%= form.file_field :image, class: "form-control-file" %>
      </div>

      <div class="form-group span-col">
        <%= form.submit "Update Course", class: "btn btn-submit" %>
      </div>

    <% end %>
  </div>
</div>

