<div class="batch-container">
  <div class="batch-header">
    <h2 class="highlight-text">Create A Batch</h2>
  </div>

  <div class="batch-form">
    <% if @batch.errors.any? %>
        <div class="error-messages">
            <h2><%= pluralize(@batch.errors.count, "error") %> prevented this batch from being saved:</h2>
            <ul>
            <% @batch.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <%= form_with(model: @batch, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name, "Batch Name" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter batch name" %>
      </div>

      <div class="form-group">
        <%= form.label :description, "Batch Description" %>
        <%= form.text_area :description, class: "form-control", placeholder: "Enter batch description" %>
      </div>

      <div class="form-group">
        <%= form.label :start_date, "Start Date" %>
        <%= form.date_field :start_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :end_date, "End Date" %>
        <%= form.date_field :end_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :duration, "Duration (in days)" %>
        <%= form.number_field :duration, class: "form-control", placeholder: "Enter duration" %>
      </div>

      <div class="form-group">
        <%= form.label :course_id, "Course" %>
        <%= form.select :course_id, options_from_collection_for_select(@courses, :id, :name), { include_blank: 'Select Course' }, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= form.submit "Create Batch", class: "btn btn-enroll" %>
      </div>
    <% end %>
  </div>
</div>
